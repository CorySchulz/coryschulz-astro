			const heightFactors = [1.2, 1.05, 1, 0.9, 1.25, 1.1];

			let width, height;
			let time = 0;
			let pointerY = 0.5;
			let pointerX = 0.5;

			const stripeOverlap = 2.3;
			const horizontalStep = 8;
			const baseAmplitude = 120;
