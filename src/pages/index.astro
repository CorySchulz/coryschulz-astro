<style>
	/* Ripple carousel fade animation for slide content */
	tarot-slide .slide-content {
		opacity: 0;
		transition: opacity 0.5s ease-in-out;
		min-width: 220px;
		text-align: center;
		font-family: 'Fields', system-ui, sans-serif;
	}

	tarot-slide.tarot-fully-visible .slide-content {
		opacity: 1;
	}

	/* ScrollTrigger fade-up animations */
	[data-section-trigger] {
		opacity: 0;
		transform: translateY(40px);
		transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1),
		            transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
	}

	[data-section-trigger].visible {
		opacity: 1;
		transform: translateY(0);
	}

	/* Dropdown Select Custom Styles Override */
	dropdown-select {
		--select-color-background: rgba(0, 0, 0, 0.15);
		--select-color-border: rgba(255, 255, 255, 0.2);
		--select-color-border-hover: rgba(255, 255, 255, 0.4);
		--select-color-text: white;
		--select-color-hover: rgba(255, 255, 255, 0.1);
		--select-color-focus: rgba(255, 255, 255, 0.15);
		--select-color-selected: rgba(255, 255, 255, 0.15);
		--select-box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
		--select-border-radius: 0.5rem;
		--select-options-max-height: none;
		width: 100%;
	}

	dropdown-select-trigger {
		backdrop-filter: blur(30px);
		-webkit-backdrop-filter: blur(30px);
	}

	dropdown-options {
		background: rgba(24, 30, 40, 1.0) !important;
	}

	dropdown-option {
		position: relative;
	}

	dropdown-option:first-child {
		border-top-left-radius: 0.5rem;
		border-top-right-radius: 0.5rem;
	}

	dropdown-option:last-child {
		border-bottom-left-radius: 0.5rem;
		border-bottom-right-radius: 0.5rem;
	}

	dropdown-option[aria-selected="true"] {
		background-color: rgba(255, 255, 255, 0.15) !important;
		font-weight: 600;
	}

	dropdown-option:hover {
		background-color: rgba(255, 255, 255, 0.1) !important;
	}

	dropdown-option:focus {
		background-color: rgba(255, 255, 255, 0.15) !important;
		box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.3) !important;
	}

	/* Canvas wrapper to hide right edge rendering glitch */
	.canvas-wrapper {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		overflow: hidden;
		z-index: 0;
	}

	#lavaCanvas {
		width: calc(100% + 10px);
		height: 100%;
	}
</style>

