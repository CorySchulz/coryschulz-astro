---
import '../app.css';
import '../styles/tarot.min.css';
import '@magic-spells/dropdown-select/css/min';
---

<!doctype html>
<html lang="en" style="background-color: #1a1f2e;">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="theme-color" content="#1a1f2e" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href="https://coryschulz.com" />
		<meta name="generator" content={Astro.generator} />
		<title>Cory Schulz - Full Stack Developer & Shopify Expert</title>

		<!-- Primary Meta Tags -->
		<meta name="title" content="Cory Schulz - Full Stack Developer & Shopify Expert" />
		<meta name="description" content="Full Stack Developer with 20 years of experience specializing in custom Shopify themes and e-commerce solutions. Creator of Magic Spells and Tarot carousel. Available for hire." />
		<meta name="keywords" content="Full Stack Developer, Shopify Developer, Shopify Theme Development, Custom Shopify Themes, E-commerce Developer, Web Developer, Magic Spells, Tarot Carousel" />
		<meta name="author" content="Cory Schulz" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://coryschulz.com" />
		<meta property="og:site_name" content="Cory Schulz Portfolio" />
		<meta property="og:title" content="Cory Schulz - Full Stack Developer & Shopify Expert" />
		<meta property="og:description" content="Full Stack Developer with 20 years of experience specializing in custom Shopify themes and e-commerce solutions. Creator of Magic Spells and Tarot carousel." />
		<meta property="og:image" content="https://coryschulz.com/og-card.jpg" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content="Cory Schulz - Full Stack Developer & Shopify Expert" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Cory Schulz - Full Stack Developer & Shopify Expert" />
		<meta name="twitter:description" content="Full Stack Developer with 20 years of experience specializing in custom Shopify themes and e-commerce solutions. Creator of Magic Spells and Tarot carousel." />
		<meta name="twitter:image" content="https://coryschulz.com/og-card.jpg" />
		<meta name="twitter:image:alt" content="Cory Schulz - Full Stack Developer & Shopify Expert" />

		<!-- Structured Data (JSON-LD) -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Person",
			"name": "Cory Schulz",
			"url": "https://coryschulz.com",
			"image": "https://coryschulz.com/cory.jpg",
			"jobTitle": "Full Stack Developer & Shopify Expert",
			"description": "Full Stack Developer with 20 years of experience specializing in custom Shopify themes and e-commerce solutions. Creator of Magic Spells and Tarot carousel.",
			"knowsAbout": [
				"Full Stack Development",
				"Shopify Development",
				"Custom Shopify Themes",
				"E-commerce Development",
				"Web Development",
				"JavaScript",
				"TypeScript",
				"React",
				"Node.js",
				"UI/UX Design",
				"Web Components"
			],
			"sameAs": [
				"https://www.linkedin.com/in/cory-schulz/",
				"https://magicspells.io"
			],
			"worksFor": {
				"@type": "Organization",
				"name": "Independent Contractor"
			},
			"alumniOf": {
				"@type": "EducationalOrganization",
				"name": "Self-taught Developer"
			}
		}
		</script>
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "WebSite",
			"name": "Cory Schulz Portfolio",
			"url": "https://coryschulz.com",
			"description": "Portfolio of Cory Schulz - Full Stack Developer specializing in Shopify theme development and custom e-commerce solutions",
			"author": {
				"@type": "Person",
				"name": "Cory Schulz"
			},
			"potentialAction": {
				"@type": "SearchAction",
				"target": "https://coryschulz.com/#contact-section",
				"query-input": "required name=search_term_string"
			}
		}
		</script>
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "ProfessionalService",
			"name": "Cory Schulz Web Development",
			"url": "https://coryschulz.com",
			"description": "Custom Shopify theme development and full-stack web development services",
			"priceRange": "$10,000 - $100,000+",
			"areaServed": "Worldwide",
			"serviceType": [
				"Custom Shopify Theme Development",
				"Shopify Site Design",
				"Full Stack Development",
				"E-commerce Development"
			],
			"provider": {
				"@type": "Person",
				"name": "Cory Schulz"
			}
		}
		</script>
	</head>
	<body>
		<slot />
	</body>
	<script>
		import '../scripts/main.js';
	</script>
</html>